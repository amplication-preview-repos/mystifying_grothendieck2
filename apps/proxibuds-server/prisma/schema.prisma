datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Friend {
  createdAt DateTime          @default(now())
  friend    Friend?           @relation(name: "FriendOnFriends", fields: [friendId], references: [id])
  friendId  String?
  friends   Friend[]          @relation(name: "FriendOnFriends")
  id        String            @id @default(cuid())
  status    EnumFriendStatus?
  updatedAt DateTime          @updatedAt
  user      User?             @relation(fields: [userId], references: [id])
  userId    String?
}

model Location {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  latitude  Float?
  longitude Float?
  timestamp DateTime?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt      DateTime   @default(now())
  email          String?    @unique
  firstName      String?
  friends        Friend[]
  id             String     @id @default(cuid())
  lastName       String?
  locations      Location[]
  password       String
  roles          Json
  uniqueUsername String?
  updatedAt      DateTime   @updatedAt
  username       String     @unique
}

enum EnumFriendStatus {
  Option1
}
